

<!DOCTYPE html>
<html>
<head>
    <title>My Watchlist</title>
    <style>
        body { font-family: Arial; background:#f5f6fa; margin:0; }
        .page { padding: 30px; }
        .title { font-size: 28px; font-weight: bold; margin-bottom: 5px; }
        .subtitle { color: #666; margin-bottom: 25px; }

        .card {
            background: white;
            padding: 50px;
            border-radius: 12px;
            text-align: center;
            margin: auto;
            width: 60%;
        }

        .empty-icon {
            font-size: 50px;
            color: #bbb;
            margin-bottom: 20px;
        }

        .btn {
            background: #2d6cf6;
            border: none;
            padding: 10px 20px;
            color: white;
            border-radius: 6px;
            cursor: pointer;
            text-decoration: none;
        }

        table {
            width: 60%;
            margin: auto;
            border-collapse: collapse;
            background: white;
            border-radius: 8px;
        }

        table th, table td {
            padding: 12px;
            border-bottom: 1px solid #eee;
            text-align: center;
        }
    </style>
</head>

<body>
<div class="page">

    <div class="title">My Watchlist</div>
    <div class="subtitle">Keep track of stocks and crypto you're interested in</div>

    <% if (items.length === 0) { %>
        
        <div class="card">
            <div class="empty-icon"></div>
            <h2>Your watchlist is empty</h2>
            <p>Add stocks and crypto to your watchlist to track their performance</p>
            <a class="btn" href="/explore">Explore Markets</a>
        </div>

    <% } else { %>

        <table>
            <tr>
                <th>Symbol</th>
                <th>Action</th>
            </tr>

            <% items.forEach(function(item){ %>
                <tr>
                    <td><%= item %></td>
                    <td><a class="btn" href="/watchlist/remove/<%= item %>">Remove</a></td>
                </tr>
            <% }) %>
        </table>

        <br><br>

        <form method="POST" action="/watchlist/add" style="text-align:center;">
            <input type="text" name="symbol" placeholder="Add symbol (e.g. AAPL)" required>
            <button class="btn" type="submit">Add</button>
        </form>

    <% } %>

</div>
</body>
</html>
