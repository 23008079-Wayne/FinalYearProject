<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Stock News Sentiment Analyzer</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <!-- Navigation Bar -->
  <nav class="navbar">
    <div class="nav-container">
      <div class="nav-brand">
        <a href="/">ðŸ“Š Sentiment Analyzer</a>
      </div>
      <ul class="nav-links">
        <li><a href="/" class="nav-link active">Sentiment Analysis</a></li>
        <li><a href="/pricing" class="nav-link">Upgrade Plan</a></li>
        <% if (user) { %>
          <li style="margin-left: auto; display: flex; align-items: center; gap: 15px;">
            <span style="color: #94a3b8;">Welcome, <strong><%= user.username %></strong></span>
            <span style="background: #60a5fa; color: white; padding: 4px 12px; border-radius: 20px; font-size: 0.85rem; font-weight: 600;"><%= user.plan.toUpperCase() %></span>
            <a href="/logout" class="nav-link" style="margin: 0;">Logout</a>
          </li>
        <% } else { %>
          <li style="margin-left: auto;">
            <a href="/login" class="nav-link">Login</a>
          </li>
        <% } %>
      </ul>
    </div>
  </nav>

  <div class="container">
    <header>
      <h1>ðŸ“Š Stock Sentiment Analyzer</h1>
      <p>Real-time sentiment analysis of financial news</p>
    </header>

    <div class="search-section">
      <form class="search-form" action="/search" method="POST">
        <input type="text" name="ticker" placeholder="Enter stock ticker (e.g., AAPL, TSLA, MSFT)" required>
        <button type="submit">Analyze</button>
      </form>
    </div>

    <div class="articles-section">
      <% if (articles) { %>
        <% if (articles.length === 0) { %>
          <div class="no-articles">
            <p>No articles found for this ticker.</p>
            <p>Try searching for another stock symbol.</p>
          </div>
        <% } else { %>
          <h2>Latest News Articles</h2>
          <div class="articles-grid">
            <% articles.forEach((article, idx) => { %>
              <div class="article">
                <div class="article-meta">
                  <span class="source-badge"><%= article.source %></span>
                  <span class="timestamp"><%= article.timeAgo %></span>
                </div>
                <p><a href="<%= article.url %>" target="_blank"><%= article.title %></a></p>
                <div class="article-actions">
                  <button class="analyse-btn" onclick="analyseArticle('<%= article.url %>', 'result-<%= idx %>')">Analyse Sentiment</button>
                </div>
                <div id="result-<%= idx %>" class="analysis-result" style="display:none;"></div>
              </div>
            <% }) %>
          </div>
        <% } %>
      <% } %>
    </div>
  </div>

  <script>
  function analyseArticle(url, resultDivId) {
    const resultDiv = document.getElementById(resultDivId);
    resultDiv.style.display = 'block';
    resultDiv.innerHTML = '<div class="loading"></div> Analysing sentiment...';

    fetch('/analyse', {
      method: 'POST',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify({ articleUrl: url })
    })
    .then(res => res.json())
    .then(data => {
      const sentimentClass = data.sentiment === 'POSITIVE' ? 'sentiment-positive' : 
                             data.sentiment === 'NEGATIVE' ? 'sentiment-negative' : 
                             'sentiment-neutral';
      
      const confidencePercent = Math.round(data.confidence * 100);
      
      resultDiv.innerHTML = `
        <div class="sentiment-badge ${sentimentClass}">
          ${data.sentiment}
        </div>
        <div class="result-item">
          <div class="result-label">Confidence Score</div>
          <div class="result-value">${data.confidence.toFixed(2)}</div>
          <div class="confidence-bar">
            <div class="confidence-fill" style="width: ${confidencePercent}%"></div>
          </div>
        </div>
        <div class="result-item">
          <div class="result-label">Summary</div>
          <div class="result-value">${data.summary}</div>
        </div>
      `;
    })
    .catch(() => {
      resultDiv.innerHTML = '<div class="result-value" style="color: #fca5a5;">Analysis failed. Please try again.</div>';
    });
  }
  </script>
</body>
</html>

